<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="8dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/shopitem_img"

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#000"
                    android:layout_marginRight="6dp"/>
                <RelativeLayout
                    android:layout_toRightOf="@+id/shopitem_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/shopitem_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="芒果超人面包"
                        android:textColor="#242424"
                        android:textSize="16dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/shopitem_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月销量 1350"
                        android:textColor="#c2c2c2"
                        android:textSize="13dp"
                        android:layout_below="@+id/shopitem_name"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/shopitem_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥19.9"
                        android:textColor="#ff6b4e"
                        android:textSize="16dp"
                        android:layout_below="@+id/shopitem_sell"
                        android:layout_marginTop="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">
                    <ImageButton
                        android:id="@+id/shopitem_jianhao"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/jianhao"/>
                    <TextView
                        android:id="@+id/shopitem_number"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="3"
                        android:layout_gravity="center_vertical"
                        android:textColor="#5c5c5c"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"/>
                    <ImageButton
                        android:id="@+id/shopitem_jiahao"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/jiahao"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
