<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/fitactivity_img"
        android:layout_width="150dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        android:layout_height="match_parent"
        android:background="#000"/>
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fitactivity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="最美宿舍评比活动"
            android:textColor="#191919"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/college"
            android:layout_below="@+id/fitactivity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学院:"
            android:textSize="12dp"
            android:textColor="#191919"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/fitactivity_college"
            android:layout_below="@+id/fitactivity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子商务学院"
            android:textSize="12dp"
            android:textColor="#191919"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/college"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/day"
            android:layout_below="@+id/college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间:"
            android:textSize="12dp"
            android:textColor="#191919"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/fitactivity_date"
            android:layout_below="@+id/college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4月20日-5月5日"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/day"
            android:textColor="#191919"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
</LinearLayout>